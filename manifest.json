{
  "manifest_version": 3,
  "name": "Hide Shorts",
  "version": "1.0",
  "description": "Hides Shorts sections on YouTube.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png"
  }
}